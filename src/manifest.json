{
  "manifest_version": 3,
  "name": "AI Proxy",
  "version": "1.1.0",
  "description": "Expose AI chats (Grok, OpenAI, DeepSeek, Claude, Gemini) as REST API for Cursor and other tools",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://grok.x.ai/*",
    "https://grok.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.deepseek.com/*",
    "https://deepseek.com/*",
    "https://claude.ai/*",
    "https://claude.com/*",
    "https://gemini.google.com/*",
    "https://bard.google.com/*",
    "http://localhost:7890/*",
    "http://127.0.0.1:7891/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://grok.x.ai/*",
        "https://grok.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.deepseek.com/*",
        "https://deepseek.com/*",
        "https://claude.ai/*",
        "https://claude.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
